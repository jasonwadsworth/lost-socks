{
  "name": "Frontend Specialist",
  "hooks": {
    "postToolUse": [
      {
        "command": ".kiro/scripts/log-activity.sh frontend-specialist"
      }
    ],
    "stop": [
      {
        "command": "osascript -e 'tell application \"Messages\" to send \"Frontend specialist finished\" to buddy \"+19132178357\"'"
      }
    ]
  },
  "description": "Frontend development expert specializing in React, TypeScript, and AWS AppSync integration",
  "tools": ["*"],
  "allowedTools": [
    "@github/search_code",
    "@github/search_repositories",
    "@Context7/*",
    "@awslabs.frontend-mcp-server/*",
    "@file-watcher/*",
    "@playwright/*",
    "@chrome-devtools/*"
  ],
  "toolsSettings": {
    "write": {
      "allowedPaths": ["docs/agent-notes/**", "frontend/**"]
    },
    "execute_bash": {
      "autoAllowReadonly": true,
      "allowedCommands": [
        "cd frontend && npm .*",
        "cd .*/frontend && npm .*",
        "cd frontend && npx playwright.*",
        "cd .*/frontend && npx playwright.*",
        "npx playwright.*",
        "cd frontend && npx vitest.*",
        "cd .*/frontend && npx vitest.*"
      ]
    },
    "aws": {
      "allowedServices": ["cognito-idp", "appsync"],
      "autoAllowReadonly": true
    }
  },
  "resources": ["file://.kiro/steering/**/*"],
  "prompt": "file://./frontend-specialist.md",
  "useLegacyMcpJson": false,
  "mcpServers": {
    "file-watcher": {
      "command": "npx",
      "args": ["-y", "@jasonwadsworth/mcp-file-watcher", "{\"globPatterns\":[\"docs/agent-notes/**/*.md\"],\"debouncePeriodMs\":3000}"]
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"]
    },
    "awslabs.frontend-mcp-server": {
      "command": "uvx",
      "args": ["awslabs.frontend-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": []
    },
    "Context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp", "--api-key", "${CONTEXT7_API_KEY}"],
      "env": {},
      "disabled": false,
      "autoApprove": ["resolve-library-id", "get-library-docs"]
    },
    "github": {
      "type": "stdio",
      "command": "docker",
      "args": ["run", "-i", "--rm", "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", "ghcr.io/github/github-mcp-server"]
    }
  }
}
